<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".MainActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

    <TextView
            android:id="@+id/iv-text"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="Hello World!"
            android:gravity="center"
            android:textSize="@dimen/font_large_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:id="@+id/iv-bender"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/bender_dance"
            android:layout_weight="1"
    />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/color_primary"
            android:layout_marginTop="@dimen/spacing_normal_16"
    >
        <EditText
                android:id="@+id/et-message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/color_gray_light"
                android:textColorHint="@color/color_gray_light"
                android:lines="1"
                android:hint="Введите текст"

                android:layout_marginRight="@dimen/spacing_normal_16"
                android:layout_marginLeft="@dimen/spacing_normal_16"
                android:paddingTop="@dimen/spacing_normal_16"
                android:paddingBottom="@dimen/spacing_normal_16"
        />
        <ImageView
                android:layout_width="@dimen/button_large_24"
                android:layout_height="@dimen/button_large_24"
                android:src="@drawable/ic_send_black_24dp"
                android:layout_gravity="center"
        />
    </LinearLayout>

</LinearLayout>